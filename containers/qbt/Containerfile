FROM debian:stable

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    pkg-config \
    git \
    tree \
    nano \
    libboost-all-dev \
    libssl-dev \
    zlib1g-dev \
    python3 \
    qttools5-dev-tools \
    libqt5xmlpatterns5-dev \
    ca-certificates && \
    apt-get clean && rm -rf /var/lib/apt/lists/*
