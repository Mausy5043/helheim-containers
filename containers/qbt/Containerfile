FROM debian:stable-slim

# Install minimal tools needed to fetch the static binary
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    ca-certificates \
    curl && \
    rm -rf /var/lib/apt/lists/*

# Create qbt user/group with UID/GID 1000
RUN groupadd -g 1000 qbt && \
    useradd -u 1000 -g 1000 -m qbt

# Create runtime directories inside the container
# (These will be bind-mounted from /srv/containers/qbt/* on the host)
RUN mkdir -p /config/logs && \
    mkdir -p /incomplete && \
    mkdir -p /complete && \
    chown -R qbt:qbt /config /incomplete /complete

# Download static qbittorrent-nox (amd64)
RUN curl -L \
    -o /usr/local/bin/qbittorrent-nox \
    https://github.com/userdocs/qbittorrent-nox-static/releases/download/release-5.1.4_v2.0.11/x86_64-qbittorrent-nox && \
    chmod +x /usr/local/bin/qbittorrent-nox

USER qbt

# Entrypoint: run qbittorrent-nox in foreground mode
# Logging will be configured later via qBittorrent.conf
ENTRYPOINT ["/usr/local/bin/qbittorrent-nox"]

# Default: show version for inspection
CMD ["--version"]
