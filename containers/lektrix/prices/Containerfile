# Containerfile for lektrix/prices:latest
FROM python:3.12-slim

# Install system operational & build dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        bc \
        curl \
        git \
        nano \
        pkg-config \
        sqlite3 \
        tree \
        libfreetype6 \
        liblapack3 \
        liblz4-1 \
        libopenblas0 \
        libpng16-16t64 \
        libsqlite3-0 \
        libzstd1 && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Create working directory
WORKDIR /app

# Copy requirements from host into container
# (host path: /home/beheer/git/lektrix/requirements.txt)
# use build parameter: --build-context lektrix=/home/beheer/git/lektrix
COPY --from=lektrix requirements.txt /app/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --root-user-action ignore -r /app/requirements.txt

# Default command: open a shell (scripts are mounted at runtime)
CMD ["bash"]
